<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicacionFinanzas"
        tools:targetApi="31">
        <activity
            android:name="view.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="view.AcercaDe"
            android:exported="false" />
        <activity
            android:name="view.Preferencias"
            android:exported="false" />
        <activity
            android:name="view.DetalleGasto"
            android:exported="false" />
        <activity
            android:name="view.VerGastos"
            android:exported="false" />
        <activity
            android:name="view.Gestiones"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name="view.Inicio"
            android:exported="false" />
        <activity
            android:name="view.Welcome"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>